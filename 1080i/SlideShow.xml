<window id="2007">
  <defaultcontrol>2</defaultcontrol>
  <controls>
    <control type="image" id="1">
      <description>bar image</description>
      <posx>-15</posx>
      <posy>60</posy>
      <width>1110</width>
      <height>98</height>
      <texture>Black.png</texture>
      <include>common-fade</include>
      <visible>Player.ShowCodec</visible>
    </control>
    <control type="label" id="10">
      <description>row 1 label</description>
      <posx>105</posx>
      <posy>75</posy>
      <label>-</label>
      <align>left</align>
      <font>font12</font>
      <include>common-fade</include>
      <visible>Player.ShowCodec</visible>
    </control>
    <control type="label" id="11">
      <description>row 2 label</description>
      <posx>105</posx>
      <posy>112</posy>
      <label>-</label>
      <align>left</align>
      <font>font12</font>
      <include>common-fade</include>
      <visible>Player.ShowCodec</visible>
    </control>
    <control type="label" id="12">
      <description>row 2 extra label</description>
      <posx>375</posx>
      <posy>112</posy>
      <label>-</label>
      <align>left</align>
      <font>font12</font>
      <include>common-fade</include>
      <visible>Player.ShowCodec</visible>
    </control>
    <control type="image" id="13">
      <description>pause image</description>
      <align>right</align>
      <posx>870</posx>
      <posy>38</posy>
      <height>96</height>
      <width>192</width>
      <visible>no</visible>
      <texture>-</texture>
      <colorkey>0</colorkey>
    </control>
    <!-- Media Info controls -->
    <control type="image" id="1">
      <description>media info background image</description>
      <posx>-15</posx>
      <posy>682</posy>
      <width>1110</width>
      <height>150</height>
      <texture>Black.png</texture>
      <include>common-fade</include>
      <visible>Player.HasMedia + Player.ShowInfo</visible>
    </control>
    <control type="image" id="1">
      <description>cover image</description>
      <posx>112</posx>
      <posy>682</posy>
      <width>150</width>
      <height>150</height>
      <info>MusicPlayer.Cover</info>
      <aspectratio>keep</aspectratio>
      <include>common-fade</include>
      <visible>Player.HasMedia + Player.ShowInfo</visible>
    </control>
    <control type="label" id="1">
      <description>Artist label</description>
      <width>668</width>
      <posx>270</posx>
      <posy>687</posy>
      <info>MusicPlayer.Artist</info>
      <align>left</align>
      <font>special12</font>
      <include>common-fade</include>
      <visible>Player.HasMedia + Player.ShowInfo</visible>
    </control>
    <control type="label" id="1">
      <description>Title label</description>
      <width>645</width>
      <posx>270</posx>
      <posy>718</posy>
      <info>MusicPlayer.Title</info>
      <align>left</align>
      <font>special13</font>
      <include>common-fade</include>
      <visible>Player.HasMedia + Player.ShowInfo</visible>
    </control>
    <control type="label" id="1">
      <description>Album label</description>
      <width>645</width>
      <posx>270</posx>
      <posy>760</posy>
      <info>MusicPlayer.Album</info>
      <align>left</align>
      <font>font10</font>
      <include>common-fade</include>
      <visible>Player.HasMedia + Player.ShowInfo</visible>
    </control>
    <control type="label" id="1">
      <description>time label</description>
      <width>645</width>
      <posx>270</posx>
      <posy>792</posy>
      <label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
      <align>left</align>
      <font>font10</font>
      <include>common-fade</include>
      <visible>Player.HasMedia + Player.ShowInfo</visible>
    </control>
    <control type="label" id="1">
      <description>Playlist</description>
      <width>150</width>
      <posx>990</posx>
      <posy>792</posy>
      <label>$INFO[musicplayer.Playlistposition,Track ]$INFO[musicplayer.Playlistlength, / ]</label>
      <align>right</align>
      <font>font10</font>
      <include>common-fade</include>
      <visible>Player.HasMedia + Player.ShowInfo</visible>
    </control>
  </controls>
</window>