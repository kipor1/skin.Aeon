<window id="2007">
  <defaultcontrol>2</defaultcontrol>
  <controls>
    <control type="group" id="13">
      <posx>195r</posx>
      <posy>15</posy>
      <visible>!Skin.HasSetting(Show_SlideShow_Paused)</visible>
      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>180</width>
        <height>52</height>
        <texture>black-back.png</texture>
        <bordertexture border="3">NoCover_1.png</bordertexture>
        <bordersize>5</bordersize>
      </control>
      <control type="label">
        <description>paused label</description>
        <posx>15</posx>
        <posy>0</posy>
        <width>150</width>
        <height>52</height>
        <align>center</align>
        <aligny>center</aligny>
        <font>font10</font>
        <textcolor>white</textcolor>
        <label>31043</label>
      </control>
    </control>
    <!-- media infos -->
    <control type="group">
      <posx>30</posx>
      <posy>945</posy>
      <visible>Player.ShowInfo + Player.HasMedia</visible>
      <include>VisibleFadeEffect</include>
      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>750</width>
        <height>120</height>
        <texture>black-back.png</texture>
        <bordertexture border="3">NoCover_1.png</bordertexture>
        <bordersize>5</bordersize>
      </control>
      <control type="image">
        <posx>14</posx>
        <posy>14</posy>
        <width>96</width>
        <height>96</height>
        <texture>$INFO[MusicPlayer.Cover]</texture>
      </control>
      <control type="label">
        <posx>135</posx>
        <posy>14</posy>
        <width>600</width>
        <height>30</height>
        <label>$INFO[MusicPlayer.Title]</label>
        <align>left</align>
        <aligny>center</aligny>
        <font>font11</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
        <scroll>true</scroll>
      </control>
      <control type="label">
        <posx>135</posx>
        <posy>45</posy>
        <width>600</width>
        <height>30</height>
        <label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
        <align>left</align>
        <aligny>center</aligny>
        <font>font11</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
        <scroll>true</scroll>
      </control>
      <control type="label">
        <posx>225</posx>
        <posy>76</posy>
        <width>105</width>
        <height>30</height>
        <label>$INFO[MusicPlayer.Time]</label>
        <align>right</align>
        <aligny>center</aligny>
        <font>font11</font>
        <textcolor>grey</textcolor>
        <shadowcolor>black</shadowcolor>
        <scroll>true</scroll>
      </control>
      <control type="progress" id="403">
        <description>progress control</description>
        <posx>232</posx>
        <posy>87</posy>
        <width>390</width>
        <height>12</height>
        <info>Player.progress</info>
      </control>
      <control type="label">
        <posx>630</posx>
        <posy>76</posy>
        <width>105</width>
        <height>30</height>
        <label>$INFO[MusicPlayer.Duration]</label>
        <align>left</align>
        <aligny>center</aligny>
        <font>font11</font>
        <textcolor>grey</textcolor>
        <shadowcolor>black</shadowcolor>
        <scroll>true</scroll>
      </control>
    </control>
  </controls>
</window>