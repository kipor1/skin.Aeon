<window type="dialog" id="2001">
  <defaultcontrol>6</defaultcontrol>
  <zorder>2</zorder>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <include>Animation_CommonFade</include>
  <controls>
    <control type="image">
      <include>FullscreenDimensions</include>
      <texture>common/darkgrey.png</texture>
    </control>
    <control type="image">
      <posx>0</posx>
      <posy>124</posy>
      <width>870</width>
      <height>956</height>
      <texture>info/musicinfogradient.png</texture>
    </control>
    <control type="group">
      <posx>82</posx>
      <animation effect="rotatey" time="0" start="-20" end="-20" center="30,0" condition="true">Conditional</animation>
      <animation effect="slide" start="645" end="0" time="700" tween="cubic" easing="out" delay="400">WindowOpen</animation>
      <control type="image">
        <description>Cover image</description>
        <width>555</width>
        <height>600</height>
        <posy>240</posy>
        <texture>$INFO[listitem.thumb]</texture>
        <bordertexture border="-77">info/musicinfoshadow.png</bordertexture>
        <aspectratio>stretch</aspectratio>
      </control>
      <control type="image">
        <description>Cover image</description>
        <posy>840</posy>
        <width>555</width>
        <height>600</height>
        <texture flipy="true" diffuse="common/Thumb_Mask6.png">$INFO[listitem.thumb]</texture>
        <aspectratio>stretch</aspectratio>
      </control>
    </control>
    <control type="image">
      <description>background image</description>
      <posx>762</posx>
      <posy>0</posy>
      <width>1158</width>
      <height>1080</height>
      <texture>info/info_rightpanelbottom.png</texture>
      <visible>IsEmpty(listitem.property(fanart_image))</visible>
    </control>
    <control type="image">
      <description>background image</description>
      <posx>762</posx>
      <posy>0</posy>
      <width>1158</width>
      <height>1080</height>
      <texture>info/info_rightpaneltop.png</texture>
    </control>
    <control type="group">
      <posx>825</posx>
      <posy>68</posy>
      <width>1042</width>
      <height>854</height>
      <visible>Container.Content(albums)</visible>
      <control type="image">
        <description>background image</description>
        <posx>0</posx>
        <posy>90</posy>
        <width>1042</width>
        <height>840</height>
        <texture>info/info_music_panellines.png</texture>
      </control>
      <control type="label">
        <description>Movie title</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>1050</width>
        <font>Font_FSInfoTitle</font>
        <label>$INFO[ListItem.Album]</label>
        <include>Colour_OffWhite</include>
      </control>
      <control type="label">
        <description>Artist</description>
        <posx>0</posx>
        <posy>96</posy>
        <width>1050</width>
        <font>Font_FSInfoArtist</font>
        <label>$INFO[ListItem.Artist]</label>
        <include>Colour_OffWhite</include>
      </control>
      <control type="label">
        <description>Year</description>
        <posx>0</posx>
        <posy>148</posy>
        <width>144</width>
        <include>Objects_FSInfoYear</include>
        <animation effect="slide" start="60,0" end="60,0" time="0" condition="IsEmpty(ListItem.Year)">Conditional</animation>
      </control>
      <control type="label">
        <description>Genre</description>
        <posx>170</posx>
        <posy>148</posy>
        <width>555</width>
        <include>Objects_FSInfoGenre</include>
      </control>
      <control type="label">
        <description>Label:</description>
        <posy>231</posy>
        <label>31423</label>
        <include>Objects_FSInfoLabel</include>
      </control>
      <control type="label">
        <description>Notes:</description>
        <posy>274</posy>
        <label>31422</label>
        <include>Objects_FSInfoLabel</include>
      </control>
      <control type="label">
        <description>Label</description>
        <posy>231</posy>
        <label fallback="31425">$INFO[ListItem.Property(AlbumLabel)]</label>
        <include>Objects_FSInfoValue</include>
      </control>
      <control type="label">
        <description>Notes</description>
        <posy>274</posy>
        <label fallback="31425">$INFO[ListItem.Property(AlbumType)]</label>
        <include>Objects_FSInfoValue</include>
      </control>
      <control type="grouplist" id="9000">
        <include>Objects_FSInfoMenuMusic</include>
        <control type="button" id="6">
          <label>31410</label>
          <include>Objects_FSInfoButton</include>
          <visible>!Skin.HasSetting(kiosk)</visible>
        </control>
        <control type="button" id="10">
          <label>31418</label>
          <include>Objects_FSInfoButton</include>
          <visible>!Skin.HasSetting(kiosk)</visible>
        </control>
        <control type="button" id="12">
          <label>31412</label>
          <include>Objects_FSInfoButton</include>
          <visible>!Skin.HasSetting(kiosk)</visible>
        </control>
      </control>
      <control type="textbox">
        <description>Plot</description>
        <posx>4</posx>
        <posy>396</posy>
        <width>945</width>
        <height>393</height>
        <align>left</align>
        <font>Font_FSInfoPlot</font>
        <autoscroll delay="3000" time="1000" repeat="10000">Skin.HasSetting(allowscroll)</autoscroll>
        <label fallback="31424">$INFO[ListItem.Property(AlbumReview)]</label>
        <include>Colour_OffWhite</include>
      </control>
      <control type="label">
        <description>Rating:</description>
        <posx>4</posx>
        <posy>864</posy>
        <width>165</width>
        <height>44</height>
        <align>left</align>
        <font>Font_FSIMDB</font>
        <label>31417</label>
        <include>Colour_Grey</include>
      </control>
      <control type="label">
        <description>IMDB rating</description>
        <posx>114</posx>
        <posy>844</posy>
        <width>165</width>
        <height>44</height>
        <align>left</align>
        <font>Font_FSIMDBData</font>
        <label>[UPPERCASE]$INFO[ListItem.Rating][/UPPERCASE]</label>
        <include>Colour_OffWhite</include>
        <visible>Skin.HasSetting(albumratingtext)</visible>
      </control>
      <control type="image">
        <description>IMDB rating</description>
        <posx>114</posx>
        <posy>849</posy>
        <width>302</width>
        <height>64</height>
        <info>ListItem.StarRating</info>
        <visible>!Skin.HasSetting(albumratingtext)</visible>
      </control>
    </control>
    <!-- Artist Info -->
    <control type="group">
      <posx>825</posx>
      <posy>68</posy>
      <width>1042</width>
      <height>854</height>
      <visible>Container.Content(artists)</visible>
      <control type="image">
        <description>background image</description>
        <posx>0</posx>
        <posy>90</posy>
        <width>1042</width>
        <height>854</height>
        <texture>info/info_artist_panellines.png</texture>
      </control>
      <control type="label">
        <description>Movie title</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>1050</width>
        <font>Font_FSInfoTitle</font>
        <label>$INFO[ListItem.Artist]</label>
        <include>Colour_OffWhite</include>
      </control>
      <control type="label">
        <description>Year</description>
        <posx>0</posx>
        <posy>87</posy>
        <width>164</width>
        <height>80</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>Font_FSInfoYear</font>
        <label fallback="-">$INFO[ListItem.Property(Formed)]$INFO[ListItem.Property(Born)]</label>
        <include>Colour_Grey</include>
        <animation effect="slide" start="70,0" end="70,0" time="0" condition="IsEmpty(ListItem.Property(Born)) + IsEmpty(ListItem.Property(Formed))">Conditional</animation>
      </control>
      <control type="label">
        <description>Genre</description>
        <posx>180</posx>
        <posy>87</posy>
        <width>555</width>
        <include>Objects_FSInfoGenre</include>
      </control>
      <control type="label">
        <description>Styles:</description>
        <posy>168</posy>
        <label>31416</label>
        <include>Objects_FSInfoLabel</include>
      </control>
      <control type="label">
        <description>Moods:</description>
        <posy>212</posy>
        <label>31413</label>
        <include>Objects_FSInfoLabel</include>
      </control>
      <control type="label">
        <description>Styles value</description>
        <posy>168</posy>
        <label fallback="31425">$INFO[ListItem.Property(Styles)]</label>
        <include>Objects_FSInfoValue</include>
      </control>
      <control type="label">
        <description>Moods value</description>
        <posy>212</posy>
        <label fallback="31425">$INFO[ListItem.Property(Moods)]</label>
        <include>Objects_FSInfoValue</include>
      </control>
      <control type="grouplist" id="9000">
        <include>Objects_FSInfoMenu</include>
        <control type="button" id="6">
          <label>31419</label>
          <include>Objects_FSInfoButton</include>
          <visible>!Skin.HasSetting(kiosk)</visible>
        </control>
        <control type="button" id="10">
          <label>31418</label>
          <include>Objects_FSInfoButton</include>
          <visible>!Skin.HasSetting(kiosk)</visible>
        </control>
        <control type="button" id="12">
          <label>31412</label>
          <include>Objects_FSInfoButton</include>
          <visible>!Skin.HasSetting(kiosk)</visible>
        </control>
      </control>
      <control type="textbox" id="4">
        <description>Bio</description>
        <posx>4</posx>
        <posy>338</posy>
        <width>945</width>
        <height>570</height>
        <align>left</align>
        <font>Font_FSInfoPlot</font>
        <autoscroll delay="3000" time="1000" repeat="10000">Skin.HasSetting(allowscroll)</autoscroll>
        <label fallback="31415">$INFO[ListItem.Biography]</label>
        <include>Colour_OffWhite</include>
      </control>
    </control>
    <!--<include>Background_ContextBlack</include>-->
  </controls>
</window>