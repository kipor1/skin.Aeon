                <posx>0</posx>
                <posy>138</posy>
                <width>1920</width>
                <height>45</height>
                <align>center</align>
                <aligny>center</aligny>
                <visible>Player.HasAudio + Skin.HasSetting(osdshowtime)</visible>
                <font>Font_OSDMusicArtist</font>
                <label>[COLOR 91FFFFFF]$INFO[MusicPlayer.Time] / $INFO[MusicPlayer.Duration][/COLOR]</label>
